{
  "name": "vite-vue3-basic-template",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint-fix:script": "eslint . --ext .js,.ts,.vue --fix",
    "prettier:w": "prettier -c -w .",
    "lint-fix:style": "stylelint \"**/*.{vue,less,css}\" --fix",
    "lint-fix": "pnpm run lint-fix:script && pnpm run prettier:w && pnpm run lint-fix:style",
    "prepare": "husky install",
    "git-commit": "git add . && git cz"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.less": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "dependencies": {
    "dz-emitter": "^1.0.3",
    "lodash-es": "^4.17.21",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.14",
    "qs": "^6.10.5",
    "vue": "^3.2.25",
    "vue-router": "^4.0.15"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/jest": "^27.5.1",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.21",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.2.24",
    "@vue/test-utils": "^2.0.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.19.0",
    "eslint-plugin-vue": "^9.1.1",
    "husky": "^8.0.1",
    "jsdom": "^19.0.0",
    "less": "^4.1.2",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "postcss-html": "^1.4.1",
    "postcss-less": "^6.0.0",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended-less": "^1.0.4",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-less": "^1.0.6",
    "typescript": "^4.5.4",
    "unplugin-auto-import": "^0.8.8",
    "unplugin-vue-define-options": "^0.3.1",
    "vite": "^2.9.9",
    "vite-plugin-vue-type-imports": "^0.1.3",
    "vitest": "^0.12.9",
    "vue-eslint-parser": "^9.0.3",
    "vue-tsc": "^0.34.7"
  }
}
